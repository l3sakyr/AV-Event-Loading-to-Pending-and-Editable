	</p>
	
	<p>
		<%= f.label :price %><br>
		<%= f.text_field :price, value: "#{val['ticketPrice']}" %>
	</p>

<% end %>

	<p>
		<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Back', events_path %>

<script type="text/javascript">
function autoSubmit() {

	$("#event").trigger("submit.rails");
}

startTimer = window.setInterval("autoSubmit()", 1500)

</script>